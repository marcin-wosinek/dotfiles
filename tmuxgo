#!/bin/bash
SESSION="main"

tmux new-session -d -s $SESSION

#admin
tmux new-window -t $SESSION:0 -k -n admin

#synergy
SYNERGY="synergy"
tmux new-session -d -s $SYNERGY
tmux new-window -t $SYNERGY:0 -k -n svn
tmux send-keys -t $SYNERGY:0 "cd ~/workspace/synergy" C-m
tmux send-keys -t $SYNERGY:0 "clear" C-m
tmux new-window -t $SYNERGY:1 -n portal-root
tmux send-keys -t $SYNERGY:1 "cd ~/workspace/synergy/synergy/src/main/portal-root" C-m
tmux send-keys -t $SYNERGY:1 "clear" C-m
tmux send-keys -t $SYNERGY:1 "vim ../webapp/WEB-INF/wro.groovy" C-m
tmux new-window -t $SYNERGY:2 -n crowler
tmux send-keys -t $SYNERGY:2 "cd ~/workspace/synergy/synergy/src/main/portal-root" C-m
tmux send-keys -t $SYNERGY:2 "clear" C-m
tmux new-window -t $SYNERGY:3 -n struts
tmux send-keys -t $SYNERGY:3 "cd ~/workspace/synergy/synergy/src/main/resources/template/synergy" C-m
tmux send-keys -t $SYNERGY:3 "clear" C-m

tmux new-window -t $SESSION:1 -n $SYNERGY
tmux send-keys -t $SESSION:1 "unset TMUX; tmux attach -t $SYNERGY" C-m

#syngular
SYNERGY_SYNGULAR="syngular"
tmux new-session -d -s $SYNERGY_SYNGULAR
tmux new-window -t $SYNERGY_SYNGULAR:0 -k -n git
tmux send-keys -t $SYNERGY_SYNGULAR:0 "cd ~/workspace/syngular" C-m
tmux send-keys -t $SYNERGY_SYNGULAR:0 "clear" C-m
tmux new-window -t $SYNERGY_SYNGULAR:1 -n vim
tmux send-keys -t $SYNERGY_SYNGULAR:1 "cd ~/workspace/syngular" C-m
tmux send-keys -t $SYNERGY_SYNGULAR:1 "clear" C-m
tmux new-window -t $SYNERGY_SYNGULAR:2 -n yeoman
tmux send-keys -t $SYNERGY_SYNGULAR:2 "cd ~/workspace/syngular" C-m
tmux send-keys -t $SYNERGY_SYNGULAR:2 "clear" C-m
tmux new-window -t $SYNERGY_SYNGULAR:3 -n server
tmux send-keys -t $SYNERGY_SYNGULAR:3 "cd ~/workspace/syngular" C-m
tmux send-keys -t $SYNERGY_SYNGULAR:3 "clear" C-m
tmux send-keys -t $SYNERGY_SYNGULAR:3 "yeoman server" C-m
tmux new-window -t $SYNERGY_SYNGULAR:4 -n testacular
tmux send-keys -t $SYNERGY_SYNGULAR:4 "cd ~/workspace/syngular" C-m
tmux send-keys -t $SYNERGY_SYNGULAR:4 "clear" C-m
tmux send-keys -t $SYNERGY_SYNGULAR:4 "testacular start testacular.conf.js" C-m
tmux new-window -t $SYNERGY_SYNGULAR:5 -n crowler
tmux send-keys -t $SYNERGY_SYNGULAR:5 "cd ~/workspace/syngular" C-m
tmux send-keys -t $SYNERGY_SYNGULAR:5 "clear" C-m

tmux new-window -t $SESSION:2 -n $SYNERGY_SYNGULAR
tmux send-keys -t $SESSION:2 "unset TMUX; tmux attach -t $SYNERGY_SYNGULAR" C-m

#attach
tmux attach -t $SESSION
